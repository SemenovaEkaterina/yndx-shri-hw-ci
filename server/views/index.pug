html
    head
        title= 'Сборки'
        link(href='/static/style.css', rel='stylesheet')
    body
        h1= 'Собрать'
        div(class="form")
            div(class="row")
                label Ревизия
                input(id='hash', value="5ea7e32a", placeholder="hash")
            div(class="row")
                label Команда
                input(id='command', value="./success.sh", placeholder="command")
            button(id='button') Собрать

        h1= 'Сборки'

        table
            tr
                th Id
                th Ревизия
                th Команда
                th Статус
                th Агент
            each build in data
                tr
                    td
                        a(href='./build/' + build.id)= build.id
                    td= build.hash
                    td= build.command
                    td
                        img(src='/static/img/' + build.status + '.svg', width='25px', height='25px')
                    td= build.agent
                    //td= build.updated
                    //td= build.stdout
                    //td= build.stderr

        h1= 'Доступные агенты'
        table
            each agent in agents
                tr
                    td= agent.id
                    td= agent.url
                    td= agent.status
                    //td= agent.updated

        script(src='./static/script.js')
